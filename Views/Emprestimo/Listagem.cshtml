@model IList<Emprestimo>
@{
    ViewData["Title"] = "Listagem de Empréstimos";
    int FiltroPorPag = Int32.Parse(ViewData["emprestimosPorPagina"].ToString());
    int paginaAtual = Int32.Parse(ViewData["paginaAtual"].ToString());
    int emprestimosPorPagina = Model.Count;
    int numDePaginas = 0;
    if (Model.Count>0)
    {
        emprestimosPorPagina = (Model.Count<FiltroPorPag ? Model.Count : FiltroPorPag);
        numDePaginas = Model.Count/emprestimosPorPagina + (Model.Count%emprestimosPorPagina==0 ? 0 : 1);
    }
}

<div class="row">
    <div class="col-md-12">
    <form class="form-inline" method="POST">
        <div class="form-group mb-2">
            <select name="TipoFiltro" class="form-control">
                <option value="Livro">Livro</option>
                <option value="Usuario">Usuário</option>
            </select>
        </div>
        <div class="form-group mb-2 mx-sm-3">
            <input type="text" placeholder="Filtro" name="Filtro" class="form-control" />
        </div>

        <div class="mb-2">
            <select name="itensPorPagina" id="itensPorPagina" class="custom-select">
                <option value="10">10</option>
                <option value="15">15</option>
                <option value="30">30</option>
                <option value="50">50</option>
                <option value=@Model.Count>Todos</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary mb-2 mx-sm-3">Pesquisar</button>

        <div id="seletorPagina">
            <span>Página :</span>
            @for (int i = 1; i <= numDePaginas; i++)
            {
                <span><a href="/Emprestimo/Listagem?paginaAtual=@i"> @i </a> </span>
            }
        </div>
    </form>
    </div>
</div>

@if (Model.Count>0)
{
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped"> 
                <thead>
                    <tr><th>Id</th>
                    <th>Usuario</th>
                    <th>Data Empréstimo</th>
                    <th>Data Devolução</th>
                    <th>Livro</th>
                    <th>Autor</th>
                    <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = (paginaAtual-1)*emprestimosPorPagina; i < (paginaAtual*emprestimosPorPagina<Model.Count?paginaAtual*emprestimosPorPagina:Model.Count); i++)
                    {
                        var e = Model[i];

                        if (e.DataDevolucao<DateTime.Today && e.Devolvido == false)
                        {
                            <tr class="text-danger">
                                <td>@e.Id</td>
                                <td>@e.NomeUsuario</td>
                                <td>@e.DataEmprestimo.ToString("dd/MM/yyyy")</td>
                                <td>@e.DataDevolucao.ToString("dd/MM/yyyy")</td>
                                <td>@e.Livro.Titulo</td>
                                <td>@e.Livro.Autor</td>
                                <td><a href="/Emprestimo/Edicao/@e.Id">Editar</a></td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td>@e.Id</td>
                                <td>@e.NomeUsuario</td>
                                <td>@e.DataEmprestimo.ToString("dd/MM/yyyy")</td>
                                <td>@e.DataDevolucao.ToString("dd/MM/yyyy")</td>
                                <td>@e.Livro.Titulo</td>
                                <td>@e.Livro.Autor</td>
                                <td><a href="/Emprestimo/Edicao/@e.Id">Editar</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <br>
    <h3>Nenhum registro encontrado.</h3>
}
